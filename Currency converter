from time import sleep #time to sleep
from datetime import datetime
import math
tim=datetime.now()
print("The Date & Time Is:", tim,end=' ')
sleep(0.01)
print("\n")
for i in "THE CURRENCY CONVERTER":
    print(i,end=' ')
    sleep(0.08)
print(" \n")
while True:
    try:
        def ind(a):
            return a*69.61 #returns the value of function
        k=ind(float(input("enter the American dollar number to convert:")))#calling the function 
        print("the indian value is:",math.trunc(k))#prints the called function along with precision values
        sleep(1) #sleeps for 2sec and prints next
    except:
        print("\n")
        print("WTF!! Enter Only Numbers..")
        print(" ")
        continue
    break

print(" ")#extra white space

while True:
    try:
        def ind1(b):
            return b*88.30
        c=ind1(float(input("enter the   Britain's Pounds number to convert:")))
        print("the indian value is:",math.trunc(c))
        sleep(1)
    except:
        print("\n")
        print("WTF!! Enter Only Numbers..")
        print(" ")
        continue
    break
        

print(" ")

